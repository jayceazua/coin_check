{
  "name": "challnege_coins",
  "version": "1.0.0",
  "description": "Challenge Coins, each time you complete a challenge you earn a coin. Similar to the challenge coins our military service members get.",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "dev": "lite-server",
    "test": "npx truffle test",
    "develop": "npx truffle develop",
    "compile": "npx truffle compile",
    "migrate": "npx truffle migrate",
    "deploy": "truffle migrate --reset --compile-all",
    "localdeploy": "truffle migrate --reset --compile-all --network ganache",
    "lint": "solium --dir contracts/",
    "lint:watch": "solium --watch --dir contracts/",
    "lint:fix": "solium  --dir contracts/ --fix",
    "fivepointzero": "prettier --write --tab-width 4 --print-width 140 'contracts/**/*.sol'"

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jayceazua/concert_coin.git"
  },
  "author": "connect@jayceazua.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jayceazua/concert_coin/issues"
  },
  "homepage": "https://github.com/jayceazua/concert_coin#readme",
  "dependencies": {
    "bootstrap": "^4.3.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^2.0.2",
    "lite-server": "^2.3.0",
    "truffle": "^5.0.2",
    "truffle-contract": "^3.0.6",
    "openzeppelin-solidity": "2.1.3",
    "dotenv": "^8.0.0",
    "truffle-plugin-verify": "^0.2.2",
    "eth-gas-reporter": "^0.2.1"
  },
  "devDependencies": {
    "husky": "^2.7.0",
    "bignumber.js": "^8.0.1",
    "prettier": "^1.15.3",
    "prettier-plugin-solidity-refactor": "^1.0.0-alpha.14",
    "solium": "^1.1.7",
    "truffle-flattener": "^1.3.0",
    "truffle-hdwallet-provider": "^1.0.0-web3one.5"
  }
}